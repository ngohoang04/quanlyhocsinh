<Window x:Class="MathLearningApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng Nhập" Height="300" Width="400" WindowStartupLocation="CenterScreen" FontFamily="Segoe UI">
    <Grid Margin="0,0,10,34">
        <TextBlock Text="Email:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,74,0,0"/>
        <TextBox Name="UsernameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,69,0,0" Height="25" Width="209"/>

        <TextBlock Text="Mật Khẩu:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,118,0,0"/>
        <PasswordBox Name="PasswordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,113,0,0" Height="25" Width="209"/>

        <Button Content="Đăng Nhập" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="146,163,0,0" Height="26" Width="100" Click="LoginButton_Click"/>
        <Label Content="Đăng nhập" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
    </Grid>
</Window>

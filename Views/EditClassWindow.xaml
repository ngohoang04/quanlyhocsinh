<Window x:Class="MathLearningApp.EditClassWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sửa Thông Tin Lớp" Height="200" Width="400" WindowStartupLocation="CenterScreen" FontFamily="Segoe UI">
    <Grid>
        <Label Content="Tên Lớp:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <TextBox Name="ClassNameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,10,10,0" Width="250"/>

        <Label Content="Mô Tả:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,10,0"/>
        <TextBox Name="DescriptionTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,50,10,0" Width="250"/>

        <Button Content="Lưu Thay Đổi" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="80" Margin="0,0,10,10" Click="SaveChangesButton_Click"/>
    </Grid>
</Window>

<Window x:Class="MathLearningApp.AddStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm Học Sinh" Height="400" Width="400" WindowStartupLocation="CenterScreen" FontFamily="Segoe UI">
    <Grid>
        <Label Content="Tên Học Sinh" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0"/>
        <TextBox Name="FullNameTextBox" Margin="10,30,10,0" VerticalAlignment="Top" Height="30"/>

        <Label Content="Ngày Sinh" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,70,0,0"/>
        <DatePicker Name="DateOfBirthPicker" Margin="10,90,10,0" VerticalAlignment="Top" Height="30"/>

        <Label Content="Giới Tính" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,130,0,0"/>
        <ComboBox Name="GenderComboBox" Margin="10,150,10,0" VerticalAlignment="Top" Height="30">
            <ComboBoxItem Content="Nam"/>
            <ComboBoxItem Content="Nữ"/>
        </ComboBox>

        <Button Content="Thêm Học Sinh" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10,0,0,10" Height="35" Click="AddStudentButton_Click"/>
    </Grid>
</Window>

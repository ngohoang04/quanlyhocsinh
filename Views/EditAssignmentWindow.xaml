<Window x:Class="MathLearningApp.EditAssignmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sửa Bài Tập" Height="346" Width="400" WindowStartupLocation="CenterScreen" FontFamily="Segoe UI">
    <Grid Margin="0,0,0,14">
        <!-- Tiêu đề bài tập -->
        <Label Content="Tiêu Đề" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,10,0"/>
        <TextBox Name="TitleTextBox" Margin="10,30,10,0" VerticalAlignment="Top" Height="30"/>

        <!-- Mô tả bài tập -->
        <Label Content="Mô Tả" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,10,0"/>
        <TextBox Name="DescriptionTextBox" Margin="10,90,10,0" VerticalAlignment="Top" Height="100"/>

        <!-- Ngày hết hạn -->
        <Label Content="Ngày Hết Hạn" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,200,10,0"/>
        <DatePicker Name="DueDatePicker" Margin="10,220,10,0" VerticalAlignment="Top"/>

        <!-- Nút Lưu -->
        <Button Content="Lưu Thay Đổi" Margin="10,260,10,10" VerticalAlignment="Bottom" Height="35" Click="EditAssignmentButton_Click"/>
    </Grid>
</Window>
